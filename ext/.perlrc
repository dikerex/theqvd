#!/usr/bin/perl

use strict;
use warnings;
use File::Tee qw(tee);

use lib::glob '*/lib:../g/p5*/lib';

my $name = $0;
$name =~ s/.*\///;
unless ($ENV{NO_AUTO_TEE}) {
    mkdir "/var/lib/qvd";
    mkdir "/var/lib/qvd/tmp";
    if ($name =~ /\bhkd\b/i) {
        open STDOUT, '>', "/var/lib/qvd/tmp/$name.out";
    }
    else {
        tee *STDOUT, '>', "/var/lib/qvd/tmp/$name.out";
    }
    open STDERR, '>&STDOUT';

    open my $pid, '>', "/var/lib/qvd/tmp/$name.pid";
    print $pid "$$\n";
    close $pid;
}

END {
    unlink "/var/lib/qvd/tmp/$name.pid";
}

